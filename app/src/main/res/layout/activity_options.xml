<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options">

    <LinearLayout
        android:layout_width="431dp"
        android:layout_height="845dp"
        android:background="@drawable/options"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/akaya_kanadaka"
            android:text="&quot;What's stressing you out? Pick all that apply!&quot;"
            android:textColor="#FB8C00"
            android:textSize="35dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#8E24AA"
            android:fontFamily="@font/actor"
            android:text="Financial Distress" />

        <Button
            android:id="@+id/button2"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#8E24AA"
            android:fontFamily="@font/actor"
            android:text="Derliction" />

        <Button
            android:id="@+id/button3"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#8E24AA"
            android:fontFamily="@font/actor"
            android:text="Addictions" />

        <Button
            android:id="@+id/button4"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#8E24AA"
            android:fontFamily="@font/actor"
            android:text="Relational Challenges" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>